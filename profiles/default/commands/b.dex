
import node;

class BoldNode : SingleArgumentNode
{
public:
  BoldNode(const Ref<Node> & arg)
    : SingleArgumentNode(arg) { }
  ~BoldNode() = default;
};

Ref<Node> b(const Ref<Node> & n, Span::Word)
{
  return Ref<BoldNode>::make(n);
}

