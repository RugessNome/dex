
import node;
import nodes.list;

namespace list
{

void begin(BracketArguments args)
{
  auto l = Ref<ListNode>::make();
  state.enter(l);
}

void end()
{
  auto l = state.leave();
  state.dispatch(l);
}

void li(const Ref<Node> & item, Span::Line)
{
  if (!state.current().is<ListNode>())
  {
    print("li : error, current node is not a list");
    return;
  }

  ListNode & list = state.current().as<ListNode>();
  list.items.push_back(item);
}

} // namespace list
